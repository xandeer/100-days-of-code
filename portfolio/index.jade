- var portfolio = [{img: './img/calc.jpg', title: 'Calculator'}, {img: '/img/wiki.jpg', title: 'Wikipedia Search Engine'}, {img: './img/weather.jpg', title: 'Weather App'}, {img: './img/pacman.jpg', title: 'Pacman Tic Tac Toe'}];
- var aboutImg = './img/me.jpg';
- var aboutText = 'Front-End Developer, like using CLI, and that makes me more efficient. I love running & reading, running gives me a healthier body. Reading-thinking-choosing-praticing, I will get more and more acknowledges by this path.';
- var wait = ' (wait)';

doctype html
html
  head
    meta(name='viewport' content="width=device-width,initial-scale=1")
    title Xandeer's Portfolio
  body
    nav#navbar.navbar.navbar-default.navbar-fixed-top
      .container
        .row
          .col-md-offset-1.col-md-10.col-sm-offset-1.col-sm-10.col-xs-12
            .navbar-header
              button.navbar-toggle.collapsed(data-toggle='collapse' data-target='#navbar-collapse-1')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.nav-item.navbar-brand(href='#' data-target='#home') Xandeer
            .collapse.navbar-collapse#navbar-collapse-1
              ul.nav.navbar-nav.navbar-right
                li.active
                  a.nav-item(href='#home' data-target='#home') Home
                li
                  a.nav-item(href='#about' data-target='#about') About
                li
                  a.nav-item(href='#portfolio' data-target='#portfolio') Portfolio
                li
                  a.nav-item(href='#contact' data-target='#contact') Contact

    main
      section#home.content.home.full-screen
        .container
          .row
            .col-md-offset-1.col-md-10.col-sm-offset-1.col-sm-10.col-xs-12
              h2.home_title.text-center Know why you're writing the code you're writing, and how it works.

      section#about.content.about.full-screen
        .container
          .row
            .col-md-offset-1.col-md-4.col-sm-offset-1.col-sm-4.col-xs-offset-1.col-xs-4
              .about_body.thumbnail
                img.about_img(src=aboutImg).img-circle
                .caption.text-center
                  h3.about_title About Me
                  p.about_text= aboutText

      section#portfolio.content.portfolio
        .container
          .row
            .portfolio_container.col-md-10.col-md-offset-1.col-sm-8.col-sm-offset-2
              .row
                each val in portfolio
                  .col-md-6.col-sm-12.col-xs-12
                    .portfolio_body.thumbnail
                      img.portfolio_img.img-responsive(src=val.img)
                      .caption.text-center
                        h3.portfolio_title= val.title + wait

      section#contact.content.contact.full-screen
        .container
          .contact_first.row
            .col-md-4.col-sm-4.col-xs-4.col-md-offset-5.col-sm-offset-4.col-xs-offset-3
              a.contact_btn.btn.btn-default.btn-lg(href='https://github.com/xandeer') Github
          .row
            .col-md-4.col-sm-4.col-xs-4.col-md-offset-5.col-sm-offset-4.col-xs-offset-3
              a.contact_btn.btn.btn-default.btn-lg(href='https://www.freecodecamp.com/xandeer') FreeCodeCamp

    footer.footer
      p.footer_body.text-center xandeer Â© 2017. All Rights Reversed
